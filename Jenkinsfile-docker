pipeline {
    agent any

    environment {
        IMAGE_NAME = 'clinic'
    }

    stages {

        stage('Build') {
            steps {
                script {
                    sh '''
                        
                        # Kill any process using port 2000
                        PID=$(sudo lsof -t -i:2000) || true
                        if [ -n "$PID" ]; then
                            sudo kill -9 $PID || true
                        else
                            echo "port 2000 not in use"
                        fi
                    '''

                    def commitId = sh(script: 'git rev-parse --short HEAD', returnStdout: true).trim()
                    
                    // Define the image tag using the commit ID
                    def imageTag = "${IMAGE_NAME}:${commitId}" 
                    echo "Image Name: ${imageTag}"

                    sh '''                    

                        #Stop, remove, and remove Docker image for existing container
                        sudo docker stop clinic:${commitId} || true

                        sudo docker rm "${imageTag}" || true

                        sudo docker rmi "${imageTag}" || true

                        #Build Docker image
                        sudo docker build -t "${imageTag}" .
                        
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    #Run Docker container in detached mode, mapping port 2000
                    sudo docker run -d -p 2000:80 --name "${imageTag}" "${imageTag}"
                '''
            }
        }
    }
    post {
        always {
            echo "Deleting directory"
            deleteDir()
        }
        failure {
            echo "Failure at Build stage"
            echo "Send email to Dev Team and Infra Team"
            echo "Failure at Test stage"
            echo "Send email to Dev, Test and Infra Team" 
        }           
        success {
            echo "Send email to Infra Team"
        }
    }    
}
